<main>
<%if current_user.in_group?(@group) || current_user.admin? %>
	<div class="container">
		<div>
			<table class='striped'>
				<thead>
					<tr>
						<th data-field="time"> Time </th>
						<th data-field="cid"> CID </th>
						<th data-field="entry"> Entry </th>
					</tr>
				</thead>
				<tbody>
					<%= render partial: 'log_list' %>
				</tbody>
			</table>
		</div>
		<% if @is_locked %>
			<%= link_to("lock", "lock?lock_type=unlocked", class: 'btn') %>
		<% else %>
			<%= link_to("lock", "lock?lock_type=only_group",  class: 'btn') %>
			<%= link_to("lock", "lock?lock_type=only_admin", class: 'btn') %>
		<% end %>
	</div>
<%end%>
</main>