<%= form_tag(multi_update_lights_path, remote:true) do %>
<div class="col s11 m11 l5 offset-s1 offset-m1 offset-l1">
	<table class="lights" id="lights_list">
		<%= render partial: 'lights_list' %>	
	</table>
	</div>
	<div class="col s12 m12 l6">
		<div class="section">
			<p><%= label_tag"rgb picker" %></p>
			<%= color_field :rgb, "color", class: "rgb_picker" %>
		</div>
		<div class="col offset-s3">
			<%= submit_tag "Change", :class => "btn" %>
		</div>
	</div>
<% end %>			